<body>


    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">

        <div class="d-flex align-items-center justify-content-between">
            <div class="logo d-flex align-items-center">
                <img src="~/assets/img/logo.png" alt="">
                <span class="d-none d-lg-block">BabyNames</span>
            </div>
            <i class="bi bi-list toggle-sidebar-btn"></i>
        </div><!-- End Logo -->

     
        <nav class="header-nav ms-auto">
            <ul class="d-flex align-items-center">

           



                <li class="nav-item dropdown pe-3">

                    <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                        <img src="@CV.PhotoPath()" alt="Profile" class="rounded-circle">
                        <span class="d-none d-md-block dropdown-toggle ps-2">@CV.FirstName() @CV.LastName() </span>
                    </a><!-- End Profile Iamge Icon -->

                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                        <li class="dropdown-header">
                            <h6>@CV.FirstName() @CV.LastName() </h6>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>

                        <li>
                            <a class="dropdown-item d-flex align-items-center" 
                            asp-area="SEC_Admin"
                            asp-controller="SEC_Admin" 
                            asp-action="UserProfile"                             
                            >
                                <i class="bi bi-person"></i>
                                <span>My Profile</span>
                            </a>
                        </li>
                     
                        
                        <li>
                            <hr class="dropdown-divider">
                        </li>

                        <li>
                            <a class="dropdown-item d-flex align-items-center" asp-area="SEC_User" asp-controller="SEC_User" asp-action="Logout">
                                <i class="bi bi-box-arrow-right"></i>
                                <span>Logout</span>
                            </a>
                        </li>

                       @* <li class="nav-item ml-auto">
                            <a class="nav-link text-dark" > <i class="fas fa-sign-out-alt"></i> Logout</a>
                        </li>*@

                    </ul><!-- End Profile Dropdown Items -->
                </li><!-- End Profile Nav -->

            </ul>
        </nav><!-- End Icons Navigation -->

    </header><!-- End Header -->
    <!-- ======= Sidebar ======= -->
    <aside id="sidebar" class="sidebar">

        <ul class="sidebar-nav" id="sidebar-nav">

            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="SEC_Admin" asp-controller="SEC_Admin" asp-action="Index">
                    <i class="bi bi-grid"></i>
                    <span>Dashboard</span>
                </a>
            </li><!-- End Dashboard Nav -->
            <li class="nav-heading">Tables</li>
 
            <li class="nav-item">

                <a class="nav-link collapsed" asp-area="SEC_Admin" asp-controller="SEC_Admin" asp-action="UserList">
                    <i class="bi bi-layout-text-window-reverse"></i>
                    <span>User table</span>
                </a>
            </li>

            <li class="nav-item">

                <a class="nav-link collapsed" asp-area="SEC_Admin" asp-controller="SEC_Admin" asp-action="BabyList">
                    <i class="bi bi-layout-text-window-reverse"></i>
                    <span>BabyNames table</span>
                </a>
            </li>

        @*     <li class="nav-item">
                <a class="nav-link collapsed" data-bs-target="#tables-nav" data-bs-toggle="collapse" href="#">
                    <i class="bi bi-layout-text-window-reverse"></i><span>Tables</span><i class="bi bi-chevron-down ms-auto"></i>
                </a>
                <ul id="tables-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                    <li>
                        <a asp-area="SEC_Admin" asp-controller="SEC_Admin" asp-action="UserList">
                            <i class="bi bi-circle"></i><span>User Table</span>
                        </a>

                    </li>
                    <li>
                        <a asp-area="SEC_Admin" asp-controller="SEC_Admin" asp-action="BabyList">
                            <i class="bi bi-circle"></i><span>BabyNames Table</span>
                        </a>

                    </li>
                    
                </ul>
            </li><!-- End Tables Nav -->
 *@
           

        

            <li class="nav-heading">Pages</li>

            <li class="nav-item">
                <a class="nav-link " asp-area="SEC_Admin" asp-controller="SEC_Admin" asp-action="UserProfile">
                    <i class="bi bi-person"></i>
                    <span>Profile</span>
                </a>
            </li><!-- End Profile Page Nav -->

          

        </ul>

    </aside><!-- End Sidebar-->

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <!-- ======= Footer ======= -->
    <footer id="footer" class="footer">
        <div class="copyright">
            &copy; Copyright <strong><span>BabyNames</span></strong>. All Rights Reserved
        </div>
      
    </footer><!-- End Footer -->


    <!-- Vendor JS Files -->
    <script src="~/assets/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/chart.js/chart.umd.js"></script>
    <script src="~/assets/vendor/echarts/echarts.min.js"></script>
    <script src="~/assets/vendor/quill/quill.min.js"></script>
    <script src="~/assets/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="~/assets/vendor/tinymce/tinymce.min.js"></script>
    <script src="~/assets/vendor/php-email-form/validate.js"></script>


    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>


    <!-- Template Main JS File -->
    <script src="~/assets/js/main.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
