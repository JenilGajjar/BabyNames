                        <div class="ps-3">
                            <h3 class="mb-1">Susumna</h3>
                            <span>Girl</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class=" d-flex justify-content-center mt-4">
            <a class="btn btn-primary py-2 px-4" asp-action="BabyList" asp-controller="SEC_User">See More</a>
        </div>
